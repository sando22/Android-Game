<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >


    <EditText
        android:id="@+id/endgameRecordName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="25dp"
        android:hint="@string/endgame_RecordName"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName"
        android:ems="10" >

        <requestFocus android:layout_width="wrap_content" />

    </EditText>

    <ImageButton
        android:id="@+id/endgameMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endgameSaveButton"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:onClick="onClick"
        android:background="@drawable/home_button" />

    <TextView
        android:id="@+id/lastQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/endgameRecordName"
        android:layout_margin="25dp"
        android:layout_marginTop="0dp"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rightAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lastQuestion"
        android:layout_margin="25dp"
        android:layout_marginTop="0dp"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/endgameSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onClick"
        android:background="@drawable/endgame_save_button" />

</RelativeLayout>