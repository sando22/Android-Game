<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/menuStartButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"
            android:text="@string/menu_StartButton"
            android:background="@drawable/menu_buttons"
            android:textSize="20sp" />

        <Button
            android:id="@+id/menuScoresButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/menu_buttons"
            android:onClick="onClick"
            android:text="@string/menu_ScoreButton"
            android:textSize="20sp" />

        <Button
            android:id="@+id/menuOnlineButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/menu_buttons"
            android:onClick="onClick"
            android:text="@string/menu_OnlineButton"
            android:visibility="invisible"
            android:textSize="20sp" />

        </LinearLayout>

</RelativeLayout>
