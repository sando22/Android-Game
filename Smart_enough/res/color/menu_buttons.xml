<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" >
	 <shape android:shape="rectangle">
	 	<gradient android:startColor="#ee720e"
		    android:endColor="#ee720e"
		    android:angle="270"/>
	  	<corners android:radius="5dp" />
	  	<stroke android:width="2dp" android:color="#ee720e" />
	</shape>
  </item>
  <item>
      <shape android:shape="rectangle">
		  <gradient android:startColor="#0f92bd"
		    android:endColor="#0f92bd"
		    android:angle="270"/>
		  <corners android:radius="5dp" />
		  <stroke android:width="2dp" android:color="#0f92bd" />
		</shape>
  </item>
</selector>

